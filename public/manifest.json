{
  "manifest_version": 3,
  "name": "Zond Wallet",
  "version": "1.0",
  "description": "Zond Wallet browser extention.",
  "icons": {
    "232": "qrl-icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Zond Wallet",
    "default_icon": "qrl-icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "permissions": [
    "background",
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": ["http://localhost/*", "http://209.250.255.226/*"]
}
